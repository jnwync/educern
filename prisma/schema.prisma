datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id    Int       @id @default(autoincrement())
  first_name String
  last_name  String
  age        Int
  email      String
  password   String
  type       String
  image      String?
  created_at DateTime  @default(now())
  updated_at DateTime?
  deleted_at DateTime?
  Comment    Comment[]
  Post       Post[]
}

model Comment {
  comment_id Int       @id @default(autoincrement())
  content    String
  created_at DateTime  @default(now())
  deleted_at DateTime?
  user       User      @relation(fields: [user_id], references: [user_id])
  user_id    Int
  post       Post      @relation(fields: [post_id], references: [post_id])
  post_id    Int
}

model Post {
  post_id    Int       @id @default(autoincrement())
  content    String
  image      String?
  votes      Int
  created_at DateTime  @default(now())
  deleted_at DateTime?
  user       User      @relation(fields: [user_id], references: [user_id])
  user_id    Int
  Comment    Comment[]
}
